<h2><%= @user.nickname %>'s Account Balance </h2>

<%= form_with model:@income, local: true do |form| %>
  <div class="form-group">
    <%= form.label :date, "日付" %>
    <%= form.date_field :date %>
  </div>

  <div class="form-group">
    <%= form.label :name, "品目" %>
    <%= form.text_field :name %>
  </div>

  <div class="form-group">
    <%= form.label :price, "金額" %>
    <%= form.number_field :price %>
  </div>

